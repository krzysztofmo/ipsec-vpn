# /etc/ipsec.conf - strongSwan IPsec configuration file

conn %default
  keyexchange = ikev2
  ike = {{ defaults.ciphers.ike }}
  esp = {{ defaults.ciphers.esp }}
  auto = start # establish connection automatically on daemon start

conn vpn
  authby = secret
  left = %any
  leftsourceip = %config
  right = {{ ipsec.remote_ip }} # where to connect
  rightsubnet = {{ defaults.conn.subnet }}
