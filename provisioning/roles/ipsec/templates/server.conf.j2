# /etc/ipsec.conf - strongSwan IPsec configuration file

conn %default
  keyexchange = ikev2
  ike = {{ ciphers.defaults.ike }}
  esp = {{ ciphers.defaults.esp }}
  auto = add

conn client
  authby = secret
  dpdaction = clear
  dpddelay = 300s
  left = %any
  leftsubnet = {{ vpn.subnet }}
  right = %any
  rightdns = {{ vpn.dns }}
  rightsourceip = {{ vpn.sourceip }}